{
  "name": "whatsapp-web-screenshot",
  "version": "1.0.0",
  "description": "Auto capture WhatsApp Web screenshots with auto-scrolling",
  "main": "dist/main/main.js",
  "scripts": {
    "build": "tsc && npm run build:renderer",
    "build:renderer": "webpack --config webpack.config.js --mode production",
    "dev": "concurrently \"npm run dev:main\" \"npm run dev:renderer\"",
    "dev:main": "tsc -w",
    "dev:renderer": "webpack serve --config webpack.config.js --mode development",
    "start": "electron .",
    "start:dev": "concurrently \"npm run dev\" \"wait-on dist/main/main.js http://localhost:8080 && electron .\"",
    "pack": "electron-builder",
    "dist": "npm run build && electron-builder"
  },
  "keywords": [
    "whatsapp",
    "screenshot",
    "electron",
    "automation"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "electron-store": "^8.1.0",
    "pdfkit": "^0.14.0",
    "screenshot-desktop": "^1.15.0",
    "sharp": "^0.33.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/pdfkit": "^0.17.4",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "concurrently": "^8.2.2",
    "css-loader": "^6.8.1",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "html-webpack-plugin": "^5.6.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "style-loader": "^3.3.3",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "wait-on": "^7.2.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  }
}
